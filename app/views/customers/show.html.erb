<h4>Имя:						<%= @customer.name %></h4>
<p> Номер телефона:	<%= @customer.number %></p>
<p>	Описание:				<%= @customer.description %></p>
<%= link_to 'Редактировать', edit_customer_path(@customer), :class => "btn btn-warning" %>
	<% if @customer.blklist == false %>
<%= link_to "в черный список", :controller => :customers, :action => :toggle_blacklist, customer_id: @customer.id %>
	<%end%>
<% if @customer.blklist == true %>
<%= link_to "из черного списка", :controller => :customers, :action => :toggle_blacklist, customer_id: @customer.id %>
	<%end%>



